<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".auth.OtpActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/et1"
            android:layout_width="@dimen/et_otp_width"
            android:layout_height="@dimen/et_otp_height"
            android:background="@drawable/background_otp"
            android:importantForAutofill="no"
            android:inputType="phone"
            android:maxLength="1"
            android:textAlignment="center"
            tools:ignore="LabelFor" />


        <EditText
            android:id="@+id/et2"
            android:layout_width="@dimen/et_otp_width"
            android:layout_height="@dimen/et_otp_height"
            android:layout_marginStart="@dimen/et_otp_margin"
            android:background="@drawable/background_otp"
            android:importantForAutofill="no"
            android:inputType="phone"
            android:maxLength="1"
            android:textAlignment="center"
            tools:ignore="LabelFor" />


        <EditText
            android:id="@+id/et3"
            android:layout_width="@dimen/et_otp_width"
            android:layout_height="@dimen/et_otp_height"
            android:layout_marginStart="@dimen/et_otp_margin"
            android:background="@drawable/background_otp"
            android:importantForAutofill="no"
            android:inputType="phone"
            android:maxLength="1"
            android:textAlignment="center"
            tools:ignore="LabelFor" />


        <EditText
            android:id="@+id/et4"
            android:layout_width="@dimen/et_otp_width"
            android:layout_height="@dimen/et_otp_height"
            android:layout_marginStart="@dimen/et_otp_margin"
            android:background="@drawable/background_otp"
            android:importantForAutofill="no"
            android:inputType="phone"
            android:maxLength="1"
            android:textAlignment="center"
            tools:ignore="LabelFor" />
        <EditText
            android:id="@+id/et5"
            android:layout_width="@dimen/et_otp_width"
            android:layout_height="@dimen/et_otp_height"
            android:layout_marginStart="@dimen/et_otp_margin"
            android:background="@drawable/background_otp"
            android:importantForAutofill="no"
            android:inputType="phone"
            android:maxLength="1"
            android:textAlignment="center"
            tools:ignore="LabelFor" />


        <EditText
            android:id="@+id/et6"
            android:layout_width="@dimen/et_otp_width"
            android:layout_height="@dimen/et_otp_height"
            android:layout_marginStart="@dimen/et_otp_margin"
            android:background="@drawable/background_otp"
            android:importantForAutofill="no"
            android:inputType="phone"
            android:maxLength="1"
            android:textAlignment="center"
            tools:ignore="LabelFor" />

    </LinearLayout>

    <Button
        android:id="@+id/otp_btn_verify"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Verify"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>